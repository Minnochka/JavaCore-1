<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.ComboBox?>
<VBox alignment="center" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.121" stylesheets="@/lesson6/css/Style.css" fx:id="test"
      fx:controller="lesson6.Client.Controller">

    <HBox fx:id="AuthPanel">
        <TextField HBox.hgrow="ALWAYS" promptText="Логин" fx:id="LoginField" />
        <PasswordField promptText="Пароль" fx:id="PasswordField" onAction="#tryToAuth"/>
        <Button text="Авторизация" onAction="#tryToAuth"/>
    </HBox>
    <TextArea fx:id="textArea" editable="false" VBox.vgrow="ALWAYS" />
    <HBox fx:id="MessagePanel" managed="false" visible="false">
        <ComboBox fx:id="UserList" />
        <TextField fx:id="textField" onAction="#sendMsg" promptText="Введите текст" HBox.hgrow="ALWAYS" />
        <Button fx:id="btn1" onAction="#sendMsg" text="Send" />
    </HBox>
    <HBox fx:id="StylePanel" managed="false" visible="false">
        <fx:define>
            <ToggleGroup fx:id="style" />
        </fx:define>
        <Label text="Стиль: "></Label>
        <children>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnNone" onAction="#NewStyle"/>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnPink" onAction="#NewStyle"/>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnBlue" onAction="#NewStyle"/>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnGreen" onAction="#NewStyle"/>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnYellow" onAction="#NewStyle"/>
            <RadioButton toggleGroup="$style" fx:id="RadioBtnGrey" onAction="#NewStyle"/>
        </children>

    </HBox>

</VBox>
